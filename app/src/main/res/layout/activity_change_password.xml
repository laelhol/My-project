<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lael.holamundo.ChangePassword"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorRoho"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/toolbar">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_arrow_white"
            android:onClick="backButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar contraseña"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/TVuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña actual"
        android:background="@drawable/login_border"
        android:textColorHint="@android:color/black"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:inputType="textPassword"
        android:drawableBottom="@drawable/line"
        android:drawableEnd="@drawable/circle_login"
        android:drawableRight="@drawable/circle_login"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"/>

    <ImageView
        android:id="@+id/IVuserCircle"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_login"
        android:layout_alignTop="@+id/TVuser"
        android:layout_alignLeft="@+id/ETpass"
        android:layout_alignStart="@+id/ETpass" />

    <ImageView
        android:id="@+id/Icono"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/lock_white"
        android:backgroundTint="@android:color/black"
        android:layout_alignTop="@+id/IVuserCircle"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"/>

    <EditText
        android:id="@+id/ETpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVuser"
        android:hint="Nueva contraseña"
        android:background="@drawable/login_border"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:drawableBottom="@drawable/line"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@+id/IVnewPassCircle"
        android:layout_alignLeft="@+id/IVnewPassCircle"
        android:layout_alignStart="@+id/IVnewPassCircle" />

    <ImageView
        android:id="@+id/IVnewPassCircle"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@+id/IVuserCircle"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_login"
        />

    <ImageView
        android:id="@+id/IVicono2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/IVuserCircle"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/lock_white"
        android:backgroundTint="@android:color/black"/>

    <EditText
        android:id="@+id/ETpass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETpass"
        android:hint="Confirmar"
        android:background="@drawable/login_border"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:textSize="16sp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:drawableBottom="@drawable/line"
        android:drawableStart="@drawable/circle_login"
        android:drawableLeft="@drawable/circle_login"/>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@id/IVnewPassCircle"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/circle_login"
        android:id="@+id/imageView" />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/IVnewPassCircle"
        android:layout_marginTop="19dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:background="@drawable/lock_white"
        android:backgroundTint="@android:color/black"
        android:id="@+id/IVicono3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Cambiar"
        android:layout_below="@+id/ETpass2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/red_ripple"
        android:backgroundTint="@color/colorRoho"
        android:onClick="changePass"/>

</RelativeLayout>